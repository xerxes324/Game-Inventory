<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Genres</title>

    <style>
        html,body{
            background-color: black; color: white;
        }

        .genresgrid{
            display: grid;
            grid-template-columns: repeat(5,1fr);
            grid-template-rows: auto;
            row-gap: 5rem;
            column-gap: 5rem;
            text-align: center;
            border: 2px solid white;
            padding: 20px;
        }
        .genreitem{
            border: 2px solid white;
            align-self: stretch;
            justify-self: stretch;
        }

        .genresheading{
            display: flex;
            justify-content: space-between;
        }

        a{
            text-decoration: none;
            color: white;
        }
    </style>

</head>
<body>
    <div class="genresheading" >
        <h1> Genres </h1>
        <div class="anchor"> 
            <h1> <a href="/"> Menu </a> </h1>
        </div>
    </div>

    <div class="genresgrid">
        <% genre.forEach( e => { %>
            <div class="genreitem"> 
                <h2> <%= e.genre %> </h2>
            </div>
        <% }) %>
    </div>
</body>
</html>
